{
  "name": "spanish-learning-app",
  "version": "2.0.0",
  "description": "Adaptive Spanish Learning App with TypeScript",
  "main": "dist/js/app.js",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "build-prod": "tsc && node build-production.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "test": "node test-runner.js",
    "migrate-check": "tsc --noEmit --strict"
  },
  "keywords": [
    "spanish",
    "learning",
    "adaptive",
    "education",
    "typescript"
  ],
  "author": "Spanish Learning Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
