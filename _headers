# Security Headers for Spanish Learning App
# These headers enhance security and privacy
# Compatible with Netlify, Vercel, and most static hosting platforms

# Global headers for all files
/*
  # Content Security Policy - Prevents XSS attacks
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:; connect-src 'self'; manifest-src 'self'; worker-src 'self'

  # Prevent clickjacking attacks
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Control referrer information
  Referrer-Policy: no-referrer

  # Restrict browser features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()

  # Enable XSS filter in older browsers
  X-XSS-Protection: 1; mode=block

  # Force HTTPS (only on production with HTTPS)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cache control for HTML pages (no cache)
  Cache-Control: no-cache, no-store, must-revalidate

# Service Worker - Special headers
/sw.js
  Service-Worker-Allowed: /
  Cache-Control: public, max-age=0, must-revalidate
  Content-Type: application/javascript; charset=utf-8

# Manifest file
/manifest.json
  Content-Type: application/manifest+json
  Cache-Control: public, max-age=3600
  Access-Control-Allow-Origin: *

# JavaScript files - Long cache (immutable)
/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=utf-8

# CSS files - Long cache (immutable)
/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=utf-8

# JSON data files - Medium cache
/data/*.json
  Cache-Control: public, max-age=86400
  Content-Type: application/json; charset=utf-8

# Images - Long cache
/icons/*
  Cache-Control: public, max-age=31536000, immutable

/screenshots/*
  Cache-Control: public, max-age=31536000, immutable

# HTML files - No cache (always get latest)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Content-Type: text/html; charset=utf-8

# Fonts - Long cache
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff

/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/ttf

# Privacy policy - Medium cache
/privacy-policy.html
  Cache-Control: public, max-age=3600
  Content-Type: text/html; charset=utf-8

# Offline page - Medium cache
/offline.html
  Cache-Control: public, max-age=3600
  Content-Type: text/html; charset=utf-8

# API endpoints (if any are added later)
/api/*
  Cache-Control: no-store, no-cache, must-revalidate
  Content-Type: application/json; charset=utf-8
